<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lnrOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/img_one"/>
            <TextView
                android:id="@+id/openServey"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:text="Un-Verified"
                android:textAllCaps="false"
                android:gravity="center"
                android:minWidth="150dp"
                android:textColor="@color/btn_red"
                android:background="@drawable/bg_btn_16dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_toEndOf="@id/lnrOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtHowTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="How important is the third dose of corona vaccine?"/>
            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_below="@id/txtHowTo"
                android:text="Lorem ipsum dolor sit amet, consectetur adipis-
-cing elit."/>
            <TextView
                android:id="@+id/progressNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="2/5"
                android:layout_below="@id/txt"
                android:layout_marginTop="32dp"
                android:textColor="@color/black"
                android:layout_marginEnd="12dp"/>
            <com.mackhartley.roundedprogressbar.RoundedProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_below="@+id/progressNumber"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                app:rpbBackgroundColor="@color/grey"
                app:rpbCornerRadius="20dp"
                app:rpbProgress="50"
                app:rpbProgressColor="@color/txt_color"
                app:rpbProgressTextColor="@color/white"
                app:rpbShowProgressText="true"
                app:rpbTextSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>