<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".Quiz.QuizTwo">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="?actionBarSize"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBar"
        android:layout_marginTop="56dp"
        android:background="@drawable/bg_servey_corner">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heading of the Survey form"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <com.mackhartley.roundedprogressbar.RoundedProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            app:rpbBackgroundColor="@color/grey"
            app:rpbCornerRadius="20dp"
            app:rpbProgress="20"
            app:rpbProgressColor="@color/txt_color"
            app:rpbProgressTextColor="@color/white"
            app:rpbShowProgressText="true"
            app:rpbTextSize="10sp" />
        <TextView
            android:id="@+id/progressNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="1/5"
            android:layout_marginTop="8dp"
            android:layout_below="@id/progressBar"
            android:textColor="@color/black"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:id="@+id/question"
            android:layout_marginTop="24dp"
            android:layout_below="@id/progressNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            android:text="2. Lorem ipsum dolor sit amet, consectetur\n
adipiscing elit,"/>
        <LinearLayout
            android:id="@+id/lnrLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question"
            android:layout_marginTop="24dp"
            android:orientation="vertical">
         <RadioButton
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Yes"
             android:checked="true"
             android:layout_marginStart="16dp"
             android:buttonTint="@color/black"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:layout_marginStart="16dp"
                android:buttonTint="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@id/lnrLay">
            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:text="Save"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/goToNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:text="Next"
                android:background="@color/btn_red"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>