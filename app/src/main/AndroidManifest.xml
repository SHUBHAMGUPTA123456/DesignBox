<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.designboxed">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DesignBoxed">
        <activity
            android:name=".Navigation.NavigationActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.Notification_Activity"
            android:exported="true" />
        <activity
            android:name=".Activities.EditProfile"
            android:exported="true"
            android:theme="@style/AppThemeLogin" />
        <activity
            android:theme="@style/AppThemeLogin"
            android:name=".Activities.Profile_Activity"
            android:exported="true" />
        <activity android:name=".Activities.Login" />
        <activity android:name=".Activities.Dashboard" />
        <activity android:name=".Activities.ResetPassword" />
        <activity android:name=".Activities.ForgetPassword" /> <!-- <activity android:name=".Activities.Login" /> -->
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>